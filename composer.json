{
    "name": "tobento/service-view",
    "type": "library",
    "description": "A flexible PHP view system.",
    "keywords": [
        "tobento",
        "package",
        "php",
        "view",
        "template"
    ],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/service-macro": "^1.0",
        "tobento/service-dir": "^1.0",
        "tobento/service-tag": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "twig/twig": "^3.0"
    },    
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\View\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\View\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}
